<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dm_16dp">

    <ImageView
        android:id="@+id/imgComicItem"
        android:layout_width="match_parent"
        android:layout_height="212.5dp"
        android:scaleType="fitXY"
        android:contentDescription="@string/comic_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtComicItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dm_8dp"
        android:layout_marginTop="@dimen/dm_16dp"
        android:layout_marginEnd="@dimen/dm_8dp"
        android:textSize="@dimen/dm_18sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgComicItem"
        tools:text="Marvel" />

</androidx.constraintlayout.widget.ConstraintLayout>